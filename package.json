{
  "name": "mark2",
  "version": "1.0.0",
  "description": "Transform Markdown into Interactive Mind Maps",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --mode development --open --config webpack.config.cjs",
    "build": "npm run lint && npm run test && webpack --mode production --config webpack.config.cjs",
    "lint": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/atoms tests/molecules tests/utils tests/i18n tests/theme",
    "test:integration": "vitest run tests/integration",
    "test:components": "vitest run tests/atoms tests/molecules tests/organisms",
    "test:utils": "vitest run tests/utils",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:debug": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "preview": "http-server dist -p 3000",
    "deploy": "npx webpack --mode production --config webpack.config.cjs && gh-pages -d dist",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "markdown",
    "mind-map",
    "visualization",
    "javascript",
    "atomic-design",
    "vanilla-js"
  ],
  "author": "mark2 contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwildt/mark2.git"
  },
  "bugs": {
    "url": "https://github.com/dwildt/mark2/issues"
  },
  "homepage": "https://dwildt.github.io/mark2",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.0",
    "gh-pages": "^6.0.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^27.0.0",
    "mini-css-extract-plugin": "^2.7.0",
    "style-loader": "^3.3.0",
    "vitest": "^3.2.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
